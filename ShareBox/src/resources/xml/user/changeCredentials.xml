<frame name="changeCredentials" size="500,300" title="Login-Informationen ändern"
       defaultCloseOperation="JFrame.DISPOSE_ON_CLOSE">

    
    
    
    <panel background="white" Layout="GridBagLayout">
        
        <label font="Georgia-BOLD-20" text="Login-Daten ändern">
            <gridbagconstraints id="gbc_1" insets="1,1,1,1" gridx="0" gridy="0" ipadx="5" ipady="5" weightx="0,75"
                                weighty="0,9"/>
        </label>
        
        <label font="Georgia-BOLD-12" text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="1"/>
        </label>
        <label font="Georgia-BOLD-12" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="1"/>
        </label>
         <label font="Georgia-BOLD-12" text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="2"/>
        </label>
        <label font="Georgia-BOLD-12" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="2"/>
        </label>
         <label font="Georgia-BOLD-12" text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="3"/>
        </label>
        <label font="Georgia-BOLD-12" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="3"/>
        </label>
        
        <label font="Georgia-BOLD-12" text="E-Mail Adresse:   ">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="4"/>
        </label>
        <textfield id="eMailField" columns="20" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="4"/>
        </textfield>

        <label font="Georgia-BOLD-12" text="altes Passwort:   ">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="5"/>
        </label>

        <passwordfield id="oldPasswordField" columns="20" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="5"/>
        </passwordfield>

        <label font="Georgia-BOLD-12" text="neues Passwort:   ">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="6"/>
        </label>

        <passwordfield id="newPasswordField" columns="20" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="6"/>
        </passwordfield>

        <label font="Georgia-BOLD-12" text="erneut neues Passwort:   ">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="7"/>
        </label>

        <passwordfield id="newPasswordField1" columns="20" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="7"/>
        </passwordfield>
        
        <label font="Georgia-BOLD-12" text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="8"/>
        </label>
        <label font="Georgia-BOLD-12" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="8"/>
        </label>
         <label font="Georgia-BOLD-12" text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="9"/>
        </label>
        <label font="Georgia-BOLD-12" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="9"/>
        </label>
         <label font="Georgia-BOLD-12" text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="10"/>
        </label>
        <label font="Georgia-BOLD-12" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="10"/>
        </label>

        <button font="Georgia-BOLD-12" text="Speichern" action="save">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="11"/>
        </button>

        <button font="Georgia-BOLD-12" text="Abbrechen" action="stop">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="11"/>
        </button>
    </panel>
</frame>