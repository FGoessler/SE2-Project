<frame name="changeAccounting" size="520,400" title="Speicherkapazität und Zahlungsinformationen ändern"
       defaultCloseOperation="JFrame.DISPOSE_ON_CLOSE">

    <panel background="white" Layout="GridBagLayout">

        <label font="ARIAL-BOLD-20" text="Login-Daten ändern">
            <gridbagconstraints id="gbc_1" insets="1,1,1,1" gridx="0" gridy="0" ipadx="5" ipady="5" weightx="0,75"
                                weighty="0,9"/>
        </label>

        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="1"/>
        </label>
        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="1"/>
        </label>
        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="2"/>
        </label>
        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="2"/>
        </label>
        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="3"/>
        </label>
        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="3"/>
        </label>

        <label font="Georgia-BOLD-16" text="Rechnungsadresse:   ">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="4"/>
        </label>

        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="5"/>
        </label>
        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="5"/>
        </label>
        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="6"/>
        </label>
        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="6"/>
        </label>

        <label text="Straße, Hausnummer:   ">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="7"/>
        </label>

        <textfield id="streetField" columns="12" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="7"/>
        </textfield>

        <label text="Adresszusatz:   ">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="8"/>
        </label>

        <textfield id="additiveField" columns="12" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="8"/>
        </textfield>

        <label text="Postleitzahl:   ">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="9"/>
        </label>

        <textfield id="codeField" columns="12" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="9"/>
        </textfield>

        <label text="Ort:   ">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="10"/>
        </label>

        <textfield id="locationField" columns="12" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="10"/>
        </textfield>

        <label text="Land:   ">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="11"/>
        </label>

        <textfield id="countryField" columns="12" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="11"/>
        </textfield>

        <label text="Speicherkapazität:   ">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="12"/>
        </label>

        <combobox id="storageLimitField" initclass="de.sharebox.user.model.StorageLimitComboBoxModel"
                  Action="selectBoxAction">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="12"/>
        </combobox>

        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="13"/>
        </label>
        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="13"/>
        </label>
        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="14"/>
        </label>
        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="14"/>
        </label>
        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="15"/>
        </label>
        <label text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="15"/>
        </label>

        <button text="Speichern" action="save">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="16"/>
        </button>

        <button text="Abbrechen" action="stop">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="16"/>
        </button>
    </panel>
</frame>