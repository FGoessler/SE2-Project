<frame name="editProfile" size="600,400" title="Allgemeine Infortmationen Ã¤ndern."
       defaultCloseOperation="JFrame.DISPOSE_ON_CLOSE">

    <panel Layout="GridBagLayout">
        <label font="Georgia-BOLD-12" text="Vorname">
            <gridbagconstraints id="gbc_1" insets="2,2,2,2" gridx="0" gridy="0" ipadx="15" ipady="15" weightx="1"
                                weighty="1"/>
        </label>

        <textfield id="firstnameField" columns="20" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="0"/>
        </textfield>

        <label font="Georgia-BOLD-12" text="Nachname">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="1"/>
        </label>

        <textfield id="lastnameField" columns="20" text="">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="1"/>
        </textfield>

        <label font="Georgia-BOLD-12" text="Geschlecht">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="2"/>
        </label>

        <combobox id="genderField" initclass="de.sharebox.user.model.GenderComboBoxModel">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="2"/>
        </combobox>

        <button text="Speichern" action="save">
            <gridbagconstraints refid="gbc_1" gridx="0" gridy="3"/>
        </button>

        <button text="Abbrechen" action="stop">
            <gridbagconstraints refid="gbc_1" gridx="1" gridy="3"/>
        </button>
    </panel>
</frame>