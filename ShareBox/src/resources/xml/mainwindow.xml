<frame size="1024,768" title="ShareBox Ultimate" defaultCloseOperation="JFrame.EXIT_ON_CLOSE">
    <menubar name="menubar">
        <menu text="Datei">
            <menuitem text="Neue Datei" action="createNewFile"/>
            <menuitem text="Neues Verzeichnis" action="createNewDirectory"/>
        </menu>
        <menu text="Verwaltung">
            <menuitem text="Profil bearbeiten" action="showEditProfile"/>
            <menuitem text="Accounting bearbeiten" action="showEditAccounting"/>
            <separator />
            <menuitem text="Nutzer einladen" action="showInvitationView"/>
            <separator />
            <menuitem text="Ausloggen" action="logout"/>
        </menu>
    </menubar>
    <panel layout="borderlayout" background="666666" constraints="BorderLayout.CENTER" id="contentContainer">
        <scrollPane>
            <tree id="tree"/>
        </scrollPane>
    </panel>
</frame>